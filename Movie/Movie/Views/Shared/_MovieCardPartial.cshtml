@model Cinema

<div class="card">
  @*  <img src="@(Model.Poster == "N/A" ? "/images/placeholder.png" : Model.Poster)" class="card-img-top" alt="...">*@
   @* <img src="@Model.Poster" class="card-img-top" alt="...">*@
    <img src="@Model.Poster" onerror="event.target.src='/images/placeholder.png'" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Title (@Model.Year)</h5>
        <p class="card-text">Janre : @Model.Type</p>

        @if (Model.Plot==null)
        {
            if(Model.Type == "movie")
            {
                <a asp-controller="Home" asp-action="Movie" asp-route-id="@Model.imdbID" class="btn btn-primary"><i class="fa-solid fa-film fa-bounce"></i> Detail</a>
            }
            else if (Model.Type == "series")
            {
                <a asp-controller="Home" asp-action="Movie" asp-route-id="@Model.imdbID" class="btn btn-primary"><i class="fa-solid fa-tv fa-bounce"></i> Detail</a>
            }
            else if (Model.Type == "game")
            {
                <a asp-controller="Home" asp-action="Movie" asp-route-id="@Model.imdbID" class="btn btn-primary"><i class="fa-solid fa-gamepad fa-bounce"></i> Detail</a>
            }
            else
            {
                <a asp-controller="Home" asp-action="Movie" asp-route-id="@Model.imdbID" class="btn btn-primary">Detail</a>
            }


        }

      
    </div>
</div>